<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/marpad8"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/surah_title"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textsize14sp"
            android:textColor="@color/black"
            android:textStyle="italic|bold"
            android:text="Juz "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/surah_title"
            android:id="@+id/tv_surah_no_name"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textsize14sp"
            android:textColor="@color/black"
            android:textStyle="italic|bold"
            android:text=" 114. ALaraf"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verses"
            android:id="@+id/tv_total_verses"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textSize="@dimen/textsize14sp"
            android:textColor="@color/black"
            android:textStyle="italic|bold"
            android:gravity="right"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALaraf"
            android:id="@+id/tv_srauah_name_arabic"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:textSize="@dimen/textsize19sp"
            android:textColor="@color/black"
            android:textStyle="italic|bold"
            android:gravity="right"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

</LinearLayout>